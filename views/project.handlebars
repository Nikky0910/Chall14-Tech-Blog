<div class="wrapper">
  <header>
    <h3>Create a New Post</h3>
  </header>
  <form class="form w-100">
    <div class="form-group">
      <label for="project-name">Title</label>
      <input id = "name-edit" class= "form-input" value="{{name}}"/>
    </div>
    <div class="form-group">
      <label for="project-description">Content</label>
      <textarea id = "description-edit" class = "form-input">
        {{description}}
      </textarea>
    </div>
    <p>
      <button class="btn btn-primary w-100">Create</button>
    </p>
  </form>
</div>
